{
  "name": "programming-grammarly",
  "displayName": "Programming Grammarly",
  "description": "This is a my third year project that helps you to detect and solve errors during programming.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.1"
  },
  "categories": [
    "Other"
  ],
  "main": "./extension.js",
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "programming-grammarly.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "programming-grammarly.checkCode",
        "title": "Check Code with AI"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "openai": "^4.67.3"
  }
}
